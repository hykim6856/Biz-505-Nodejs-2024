extends ../layout
block content   
    link(rel="stylesheet", href="/css/product.css")

    script(src="/js/product.js")
    form.product(method="POST", enctype="multipart/form-data")
        fieldset 
            legend 상품입력
            div
                label(for="p_code") 상품코드
                input(type="text", name="p_code",id="p_code")
                label(for="p_name") 상품이름
                input(type="text", name="p_name",id="p_name")
            div 
                label(for="p_item") 품목
                input(type="text", name="p_item",id="p_item") 
                label(for="p_std") 규격
                input(type="text", name="p_std",id="p_std")
            div 
                label(for="p_iprice") 매입단가
                input(type="text", name="p_iprice",id="p_iprice")
                label(for="p_oprice") 매출단가
                input(type="text", name="p_oprice",id="p_oprice")

            div.img_box
                img(src="/images/add_icon.svg",alt="사진",width="100px", height="100px" class="img_add")
                input(type="file",name="p_image", accept="image/*", id="p_image")
                input#img.focus()
            div.btn_box
                button.submit(type="submit",value="저장") 저장
                button.cancle(type="reset", value="새로작성") 새로작성